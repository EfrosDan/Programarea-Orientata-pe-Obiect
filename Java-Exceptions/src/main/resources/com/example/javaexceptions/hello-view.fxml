<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox  xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javaexceptions.HelloController" fx:id="vbox"  >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="Result" maxWidth="300" text="Result: "/>
    <TextField promptText="Enter the first number"  fx:id="first_num" maxWidth="200">
    </TextField>
    <TextField promptText="Enter the second number" fx:id="second_num" maxWidth="200">
    </TextField>
    <Button text="Divide" onAction="#onDividedButtonClick"/>
</VBox>
